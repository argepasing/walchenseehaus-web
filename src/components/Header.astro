---
import headerImg from "@/images/header-walchensee-vom-herzogstand.jpg";
---

<div
  class="bg-header-image flex items-center justify-center bg-gradient-to-r from-cyan-500 to-blue-500"
  style={{ backgroundImage: `url('${headerImg.src}')`, minHeight: "350px" }}
>
  <div class="text-center">
    <a href="/">
      <h1 class="text-nowrap px-3 text-2xl font-semibold text-white sm:text-4xl md:text-5xl lg:text-7xl">Jugendhaus Walchensee e.V.</h1>
      <h2 class="text-sm font-normal tracking-wider text-white sm:text-base">Förderverein im Schützengau München Süd-West</h2>
    </a>
  </div>
</div>
<hr />

<style>
  .bg-header-image {
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
  }
</style>
