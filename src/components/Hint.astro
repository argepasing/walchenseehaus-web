---
import data from "@/content/hinweis/buchung.json";

interface HintData {
  active: boolean;
  title: string;
  body: string;
}

const { active, title, body } = data as HintData;
---

{
  !!active && (
    <div>
      <h1>{title}</h1>
      <p>{body}</p>
    </div>
  )
}

<style>
  div {
    @apply rounded border-2 border-amber-300 bg-amber-100 p-4;
  }
  h1 {
    @apply mb-2 text-base font-semibold text-amber-900;
  }
  p {
    @apply m-0 text-sm text-amber-900;
  }
</style>
