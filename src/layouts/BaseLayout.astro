---
import "@/stylesheets/app.css";

const { title } = Astro.props.frontmatter || Astro.props;
const currentPath = Astro.url.pathname;

import Header from "@/components/Header.astro";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Jugendhaus Walchensee e.V.</title>

    <script is:inline src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1/font/bootstrap-icons.min.css" />
  </head>
  <body data-current-path={currentPath}>
    <Header />
    <Navbar />
    <main class="prose mx-auto px-6" style="width: 1090px; max-width: 100%; min-height: 600px;">
      <slot />
    </main>
    <Footer />

    <script is:inline src="https://cdn.jsdelivr.net/npm/medium-zoom@1/dist/medium-zoom.min.js"></script>
    <script is:inline>
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", (user) => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }

      // Medium Zoom setup
      document.addEventListener("DOMContentLoaded", () => {
        mediumZoom("ul.grid > li > img", {
          background: "rgba(255, 255, 255, .75)",
          margin: 24,
        });
      });
    </script>
  </body>
</html>
