---
import Layout from "@/layouts/BaseLayout.astro";
---

<Layout title="Mitgliederbereich">
  <div class="rounded-md bg-slate-100 text-center">
    <div id="form-wrapper" class="py-6">
      <div class="mb-4">
        <i class="bi bi-person-lock text-5xl"></i>
        <br />
        <span class="mt-4 block">Dieser Inhalt ist passwortgesch√ºtzt.</span>
        <span class="mt-1 block text-sm">Geben Sie bitte das Passwort ein, um den Inhalt anzuzeigen.</span>
      </div>

      <form id="form" class="mx-auto mb-3 w-1/3 text-left">
        <input type="password" name="password" placeholder="Password" class="form-input" required />
        <button type="submit" class="form-submit">Absenden</button>
      </form>
    </div>

    <div>
      <div id="target"></div>
    </div>
  </div>
</Layout>

<script>
  // form sumbmit
  const form = document.querySelector("#form");

  form.addEventListener("submit", (e) => {
    e.preventDefault();
    const formData = new FormData(form);
    const password = formData.get("password");
    const url = `/api/mitglieder?password=${password}`;
    fetch(url)
      .then((response) => {
        if (response.ok) {
          const wrapper = document.querySelector("#form-wrapper");
          wrapper.style.display = "none";
        }
        return response.text();
      })
      .then((data) => {
        const target = document.querySelector("#target");
        target.innerHTML = data;

        const input = document.querySelector("input[name='password']");
        input.value = "";
      });
  });
</script>

<style is:global>
  .response-box-error {
    @apply rounded border border-red-300 bg-red-200 p-3;
  }
  .response-box-error h1 {
    @apply mb-0 bg-red-200 pb-1 text-base font-medium;
  }
  .response-box-error p {
    @apply m-0 p-0 text-sm;
  }

  .form-input {
    @apply inline-block rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500;
  }
  .form-submit {
    @apply rounded-lg bg-blue-700 px-3 py-2 text-center text-sm font-medium text-white hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800;
  }
</style>
